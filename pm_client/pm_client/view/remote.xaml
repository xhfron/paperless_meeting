<UserControl x:Class="pm_client.view.remote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pm_client.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <WrapPanel Orientation="Horizontal"
                   Margin="66,69,10,10">
            
            <Border Width="284" 
                    Height="181" 
                    Margin="0,0,47,9"
                    CornerRadius="10" 
                    BorderThickness="1" 
                    BorderBrush="{StaticResource sidebar_border}"
                    Background="{StaticResource sidebar_white}">
                <StackPanel
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center">
                    <Image Width="90" Height="90" Source="/res/drawable/o_note.png"></Image>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="DengXian" FontSize="32" Padding="20,0,0,0">腾讯会议</TextBlock>
                </StackPanel>
            </Border>
        </WrapPanel>
    </Grid>
</UserControl>
